# Define the file path
file_path = 'your_file.txt'

# Read the words from the file
with open(file_path, 'r') as file:
    words = file.readlines()

# Strip any newlines and sort the words
words = [word.strip() for word in words]  # Remove leading/trailing whitespace
words.sort()  # Sort the words alphabetically

# Write the sorted words back to the file (or create a new file if desired)
with open(file_path, 'w') as file:  # Use 'sorted_file.txt' if you want a new file
    for word in words:
        file.write(word + '\n')  # Write each word on a new line