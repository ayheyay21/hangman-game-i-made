# Define the file path
file_path = 'your_file.txt'

# The line number to remove (0-based index)
line_number_to_remove = 2  # This will remove the third line

# Open the file and read all lines
with open(file_path, 'r') as file:
    lines = file.readlines()

# Debugging: Print the lines read from the file
print("Lines read from the file:")
for i, line in enumerate(lines):
    print(f"Line {i}: {line.strip()}")

# Write the lines back, excluding the line number to remove
with open(file_path, 'w') as file:
    for i, line in enumerate(lines):
        if i != line_number_to_remove:
            file.write(line)
        else:
            print(f"Removing line {i}: {line.strip()}")